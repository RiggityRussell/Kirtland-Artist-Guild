@model Kirtland_Artist_Guild.Models.Art

@{
    ViewData["Title"] = "Details";
}

<div class="container py-2 ">
    <div class="row" data-masonry='{"percentPosition": true }'>
        <div class="col-sm-8 col-md-8 py-3">
            <div class="card bg-transparent">
                <div class="card-body">
                    <img src="/media/Art1.jpg" alt="Image" class="img-fluid border border-warning">
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-4 py-3">
            <div class="card bg-transparent">
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(model => model.Name)</h3>
                    @* should have if statements, THIS NEEDS TO BE IMPLEMENTED STILL
                    
                    @if (Art.Color != null)
                    <p><b>@Html.DisplayNameFor(model => model.Color)</b>: @Html.DisplayFor(model => model.Color)</p>


                    if (Art.Medium != null)
                    <p><b>@Html.DisplayNameFor(model => model.Medium)</b>: @Html.DisplayFor(model => model.Medium)<p>

                    if (Art.Style != null)
                    <p><b>@Html.DisplayNameFor(model => model.Style)</b>: @Html.DisplayFor(model => model.Medium)<p>
                    *@

                    
                    <br />
                    <p><b>@Html.DisplayNameFor(model => model.Description)</b>: @Html.Raw(Model.Description.Replace(Environment.NewLine, "<br/>"))</p>
                    <p><b>@Html.DisplayNameFor(model => model.Available)</b>: @Html.DisplayFor(model => model.Available)</p>
                    <p><b>@Html.DisplayNameFor(model => model.Price)</b>: &#36 @Html.DisplayFor(model => model.Price)</p>
                    <p><b>Colors:</b> 
                        @foreach (var color in Model.ArtColorLinks)
                        {
                            <div>@color.ArtColor.Name</div>
                        }    
                    </p>
                    <p>
                        <b>Mediums:</b>
                        @foreach (var medium in Model.ArtMediumLinks)
                        {
                            <div>@medium.ArtMedium.Name</div>
                        }
                    </p>
                    <p>
                        <b>Styles:</b>
                        @foreach (var style in Model.ArtStyleLinks)
                        {
                            <div>@style.ArtStyle.Name</div>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
