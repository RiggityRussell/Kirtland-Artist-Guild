@model IEnumerable<Kirtland_Artist_Guild.Models.Art>

@{
    ViewData["Title"] = "Art";
}

<div class="container-fluid">
    

    <p>
        <a asp-action="Create" class="btn btn-secondary">Create New</a>
    </p>
    <table class="table table-dark table-striped table-hover table-responsive-md">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserID) @*Replace with User Name*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Available)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shipping)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID) @*Replace with User Name*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Available)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shipping)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary btn-sm mb-1">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary btn-sm mb-1">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-secondary btn-sm mb-1">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>