@model Kirtland_Artist_Guild.Models.ArtStyleLink

@{
    ViewData["Title"] = "Add Style";
}

<h1>Add Style</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ArtStyleLinkCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtID" />
            <div class="form-group">
                <label class="mb-1">Select One:</label>
                <select asp-for="ArtStyleID" class="form-control" asp-items="ViewBag.ArtStyleID"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Add" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@ViewBag.art">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}