@model IEnumerable<Kirtland_Artist_Guild.Models.ArtColor>

@{
    ViewData["Title"] = "Art Colors";
}

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 200px; white-space: normal;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="text-align: right;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="max-width: 100px; word-wrap: break-word;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align: left;">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>