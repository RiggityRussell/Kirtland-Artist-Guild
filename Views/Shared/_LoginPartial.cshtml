@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<div class="row justify-content-sm-center">
    <div class="col-sm-auto text-center mb-2">
        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="Home" asp-action="Artist" asp-route-id="@User.Identity?.Name" class="text-warning">@User.Identity?.Name</a>
        }
    </div>
</div>
<div class="row justify-content-sm-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-sm-auto">
            <div class="btn-group" role="group" aria-label="Admin and Logout buttons">
                <a class="btn btn-sm btn-outline-light" asp-area="Admin" asp-controller="Account" asp-action="Index"><i class="fa fa-cog"></i>&nbsp;Admin</a>
                <div class="mx-1"></div>
                <form method="post" class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                    <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="col-sm-auto">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
</div>


