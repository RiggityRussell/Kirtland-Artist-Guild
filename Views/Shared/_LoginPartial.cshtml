@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<div class="row justify-content-sm-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-sm-auto text-warning">@User.Identity?.Name</div>
        <a class="col-sm-auto btn btn-sm btn-outline-light" asp-area="Admin" asp-controller="Account" asp-action="Index"><i class="fa fa-cog"></i>&nbsp;Admin</a>
        <form method="post" class="col-sm-auto form-inline" asp-area="Identity" asp-page="/Account/Logout" >
            <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
        </form>
    }
    else
    {        
        <a class="col-sm-auto nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>        
    }
</div>