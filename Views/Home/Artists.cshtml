@model ArtistsViewModel
@{
    ViewData["Title"] = "Artists";
}

<div class="text-center">
    <h1 class="display-4">Artists</h1>
    <p></p>
</div>



<div class="container">
    <div class="row masonry-grid">
        @if (Model.Users.Count() == 0)
        {
            <div>There are no artist accounts.</div>
        }
        else
        {
            @foreach (User user in Model.Users)
            {
                @foreach (string roleName in user.RoleNames) // Find more efficient way to check if user is artist
                {
                    @if (roleName == "Artist")
                    {
                      
                        @if (user.firstName != null)
                        {
                            <div class="col-md-4 col-lg-3 masonry-item mt-4 ">

                                <a asp-controller="Home" asp-action="Artist" asp-route-id="@user.UserName">
                                    <div class="image-container">
                                    <img src="" alt="Image" class="img-fluid border border-warning border-1 h-100">
                                    </div>
                                </a>
                                <div class="image-info">
                                    <p class="fw-bold mt-1">@user.firstName @user.lastName</p>
                                    <p class="fst-italic">@user.artistMedium</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div><a asp-controller="Home" asp-action="Artist" asp-route-id="@user.UserName">@user.UserName</a></div>
                        }

                    }
                }        
            }
        }
    </div>
</div>
